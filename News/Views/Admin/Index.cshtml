@model IEnumerable<News.Models.NewsViewModel>

<h2 class="text-center mb-3 text-warning">Новая запись</h2>
<form asp-action="Index" method="post" class="mx-auto w-50" enctype="multipart/form-data">
    <div class="form-floating mb-3">
        <textarea name="ShortDescription" class="form-control" placeholder="ShortDescription" style="height: 100px"></textarea>
        <label>Короткое описание</label>
    </div>
    <div class="form-floating mb-3">
        <textarea name="Description" class="form-control" style="height: 400px" placeholder="Desctiption"></textarea>
        <label>Описание</label>
    </div>
    <div class="form-floating mb-3">
        <select name="Category" class="form-select">
            <option selected>Без категории</option>
            <option value="Sport">Спорт</option>
            <option value="Politics">Политика</option>
            <option value="Science">Наука</option>
            <option value="Tragedy">Трагедия</option>
        </select>
        <label>Категория</label>
    </div>
    <div class="mb-3">
        <label class="text-warning">Изображение</label>
        <input name="Image" type="file" class="form-control"></input>
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn btn-warning w-50">Загрузить</button>
    </div>
</form>
